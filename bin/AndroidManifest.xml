<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.itranfuzz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.itranfuzz.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.itranfuzz.WebLoad"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="info.itranfuzz.WEBLOAD"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.itranfuzz.service.TestProviderController"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="info.itranfuzz.TPC"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service android:name="info.itranfuzz.service.LocationService" android:exported="false">
            <intent-filter>
                <action android:name="info.itranfuzz.service.LOCATIONSERVICE"/>
            </intent-filter>
        </service>
    </application>

</manifest>
